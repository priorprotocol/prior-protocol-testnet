hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "node dist/server/index.js"]
build = ["sh", "-c", "npm install && npm run build"]

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
